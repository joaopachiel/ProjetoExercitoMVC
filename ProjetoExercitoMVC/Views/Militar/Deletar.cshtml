@model ProjetoExercitoMVC.Models.Entity.Militar
@{
    ViewData["Title"] = "Excluir Militar";
}
<h2>@ViewData["Title"]</h2>
<h4>Tem certeza que deseja excluir este Militar?</h4>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Graduacao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Graduacao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FuncaoExercida)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FuncaoExercida)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataIngresso)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataIngresso)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Companhia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Companhia.Nome)
        </dd>
    </dl>

    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>